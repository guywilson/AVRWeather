<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<title>Weather Charts</title>
		<link rel="stylesheet" type="text/css" href="/css/style.css">
		<link href='https://fonts.googleapis.com/css?family=Open+Sans:300' rel='stylesheet' type='text/css'>
		<script src="./node_modules/chart.js/dist/Chart.js"></script>
	</head>
	<body>
		<div class="container">
			<h1>Weather Charts</h1>
			<canvas id="temperatureCanvas" width="400" height="400"></canvas>
			<script>
				var ctx = document.getElementById('temperatureCanvas');

				var temperatureChart = new Chart(ctx, {
					type: 'line',
					data: {
						labels: [
							<% if(xLabels !== null){ %>
								<p><%= xLabels %></p>
							<% } %>
						],
						datasets: [{
							label: 'Temperature last 24h',
							data: [
								<% if(tempReadings !== null){ %>
								<p><%= tempReadings %></p>
							<% } %>
							],
							backgroundColor: [
				                'rgba(255, 99, 132, 0.2)',
				                'rgba(54, 162, 235, 0.2)',
				                'rgba(255, 206, 86, 0.2)',
				                'rgba(75, 192, 192, 0.2)',
				                'rgba(153, 102, 255, 0.2)',
				                'rgba(255, 159, 64, 0.2)'
							],
							borderColor: [
				                'rgba(255, 99, 132, 1)',
				                'rgba(54, 162, 235, 1)',
				                'rgba(255, 206, 86, 1)',
				                'rgba(75, 192, 192, 1)',
				                'rgba(153, 102, 255, 1)',
				                'rgba(255, 159, 64, 1)'
							],
							borderWidth: 1
						}]
					},
				    options: {
				        scales: {
				            yAxes: [{
				                ticks: {
				                    beginAtZero: true
				                }
				            }]
				        }
				    }
				});
			</script>
		</div>
	</body>
</html>