<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<title>Weather Charts</title>
		<link rel="stylesheet" type="text/css" href="/css/style.css">
		<link href='https://fonts.googleapis.com/css?family=Open+Sans:300' rel='stylesheet' type='text/css'>
		<script src="./node_modules/chart.js/dist/Chart.js"></script>
	</head>
	<body>
		<div class="container">
			<h1>Weather Charts</h1>
			<canvas id="temperatureCanvas" width="400" height="400"></canvas>
			<script>
				var ctx = document.getElementById('temperatureCanvas');

				var temperatureChart = new Chart(ctx, {
					type: 'line',
					data: {
						labels: [
							<% if(xLabels !== null){ %>
								<p><%= xLabels %></p>
							<% } %>
						],
						datasets: [{
							label: 'Temperature last 24h',
							data: [
								<% if(tempReadings !== null){ %>
								<p><%= tempReadings %></p>
							<% } %>
							]
						}]
					}
				});
			</script>
		</div>
	</body>
</html>